---
import { rootImages } from "../../../../utils/rootImages";

const { title, description } = Astro.props;
---

<li
    class="relative bg-gradient-to-r from-[#333] to-[#222] p-5 rounded-lg shadow-lg before:absolute before:inset-1 before:bg-gradient-to-r before:rounded-lg before:-z-10"
>
    <div class="mb-2.5 flex justify-center">
        <img src={rootImages.myAvatar} alt="design icon" class="w-10" />
    </div>

    <div class="text-center">
        <h4 class="mb-1.5">{title}</h4>

        <p class="text-gray-300 text-base font-light leading-7">
            {description}
        </p>
    </div>
</li>
