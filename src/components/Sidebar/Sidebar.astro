    },
    {
        title: "Phone",
        link: "tel:+123456789",
        linkText: "+123456789",
        icon: ' <svg xmlns="http://www.w3.org/2000/svg" width="20" height="32" viewBox="0 0 24 24"><path fill="hsl(45, 54%, 58%)" d="M16 1H8C6.34 1 5 2.34 5 4v16c0 1.66 1.34 3 3 3h8c1.66 0 3-1.34 3-3V4c0-1.66-1.34-3-3-3m-2 20h-4v-1h4zm3.25-3H6.75V4h10.5z"/></svg>',
